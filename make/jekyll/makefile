#--------------------------------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------------------------------
#
# Begin jekyll make targets
#
#--------------------------------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------------------------------
# jekyll install
#--------------------------------------------------------------------------------------------------------------
# Do not execute this command with sudo. 
# This utility is intened for gitpod developer use only and should not execute within a CICD build.
#--------------------------------------------------------------------------------------------------------------
jekyll/install:
	gem install bundler jekyll

jekyll/serve: jekyll/install
	cd docs; \
	bundle install; \
	bundle exec jekyll serve

#--------------------------------------------------------------------------------------------------------------
#
# End jekyll make targets
#
#--------------------------------------------------------------------------------------------------------------